generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Employee {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  image     String?
  department String?
  createdAt DateTime @default(now())
  employeeId String  @unique
  position  String
  project   String?
  employeeType EMPTYPE @default(DRIVER)

  // 1-to-many: Creator of requests
  requestsCreated Request[] @relation("RequestCreator")

  // explicit join model relations for requests received / sent
  asRequestSender RequestReceivers[] @relation("RequestReceivers_employee")
  asRequestReceiver RequestReceivers[] @relation("RequestReceivers_reciever")
}

model Request {
  id        String   @id @default(cuid())
  employeeId String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  requestType String
  firstApprovment String?
  secondApprovment String?
  shiftType1 String?
  shiftType2  String?
  shiftDate1 DateTime?
  shiftDate2 DateTime?
  requesterComment String?
  replier1_Comment String?
  replier2_Comment String?
  approvalDate1 DateTime?
  approvalDate2 DateTime?
  

  // 1-to-many: Back relation to creator
  creator Employee @relation("RequestCreator", fields: [employeeId], references: [employeeId])

  // explicit join model for receivers
  RequestReceivers RequestReceivers[] @relation("RequestReceivers_request")
}

model RequestReceivers {
  requestId String
  employeeId String
  recieverId String

  request Request @relation("RequestReceivers_request", fields: [requestId], references: [id])
  employee Employee @relation("RequestReceivers_employee", fields: [employeeId], references: [employeeId])
  reciever Employee @relation("RequestReceivers_reciever", fields: [recieverId], references: [employeeId])

  @@id([requestId, employeeId, recieverId])
}

enum EMPTYPE{

  DRIVER
  ADMIN
}